        }
        .movie-footer-actions {
            display: flex;
            gap: 8px;
            margin-top: auto;
            padding-top: 1rem;
            border-top: 1px solid rgba(249,115,22,0.15);
        }
        .action-btn-footer {
            flex: 1;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            padding: 8px 12px;
            background: linear-gradient(135deg, rgba(249,115,22,0.15), rgba(249,115,22,0.05));
            border: 1px solid rgba(249,115,22,0.25);
