        /* Hide legacy titan-action-btns if present */
        .titan-action-btns { display: none; }

        .btn-small { border:none; background: rgba(255,255,255,0.03); color:#f8fafc; padding:0.35rem 0.6rem; border-radius:0.5rem; font-size:0.88rem; cursor:pointer; }

        .btn-small:hover { background: rgba(239,68,68,0.12); }

        .stat-bar { background:#071021; border-radius:999px; height:8px; overflow:hidden; }

        .stat-fill { height:100%; background: linear-gradient(90deg,#ef4444,#f97316); width:72%; }


        .movie-info h3 {
            font-size: 1.25rem;
