<%-include('../cabecalho.ejs')%>
 <header>
        <h3>Editar Filme</h3>
      </header>
      <div class="content">
        <form id="form-filme" method="post" autocomplete="off" >
          <div class="grid">
            <div>
              <label for="nome">Nome do Filme</label>
              <input id="nome" value="<%=filme.nome%>" name="nome" type="text" placeholder="Ex:Attack on Titan: O Último Ataque" required>
            </div>
            <div>
              <label for="Tempo">Tempo de Duração</label>
              <input id="Tempo" value="<%=filme.Tempo%>" name="Tempo" type="text" placeholder="Ex:1h30min" required>
            </div>
            <div>
              <label for="Historia">História</label>
              <input id="Historia" value="<%=filme.Historia%>" name="Historia" type="text" placeholder="Ex:Um herói luta contra..." required>
            </div>
              
           <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/filme/lst">Cancelar</a>
            <button type="submit" class="btn primary">Editar Filme</button>
          </footer>
        </form>
      </div>

  <%-include('../rodape.ejs')%>